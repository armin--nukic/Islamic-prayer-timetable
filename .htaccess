# Apache Configuration for Islamic Prayer Times App

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Default expiration: 3 days
    ExpiresDefault "access plus 3 days"
    
    # HTML expires after 1 hour (updates frequently)
    ExpiresByType text/html "access plus 1 hour"
    
    # CSS/JS expires after 30 days (can be cached longer)
    ExpiresByType text/css "access plus 30 days"
    ExpiresByType application/javascript "access plus 30 days"
    ExpiresByType text/javascript "access plus 30 days"
    
    # JSON expires after 1 hour
    ExpiresByType application/json "access plus 1 hour"
    
    # Images expire after 60 days
    ExpiresByType image/jpeg "access plus 60 days"
    ExpiresByType image/gif "access plus 60 days"
    ExpiresByType image/png "access plus 60 days"
    ExpiresByType image/webp "access plus 60 days"
    
    # Fonts expire after 120 days
    ExpiresByType font/ttf "access plus 120 days"
    ExpiresByType font/otf "access plus 120 days"
    ExpiresByType application/x-font-woff "access plus 120 days"
</IfModule>

# Set proper content types
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType application/json json
    AddType text/plain manifest
    AddEncoding gzip .js.gz
    AddEncoding gzip .css.gz
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Prevent directory listing
<IfModule mod_autoindex.c>
    Options -Indexes
</IfModule>

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Remove .html extension
    # RewriteCond %{REQUEST_FILENAME} !-f
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteRule ^([^\.]+)$ $1.html [NC, L]
    
    # Handle 404 gracefully - serve index.html
    ErrorDocument 404 /index.html
</IfModule>

# Set headers for security and performance
<IfModule mod_headers.c>
    # Enable caching for static assets
    Header set Cache-Control "max-age=2592000, public"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Force HTTPS if available
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Allow embedding from same origin
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Feature Policy / Permissions Policy
    Header set Permissions-Policy "geolocation=(self), camera=(), microphone=()"
</IfModule>

# Deny access to sensitive files
<FilesMatch "^(\.|config\.|sw\.js|manifest\.json)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to necessary files
<FilesMatch "\.(js|css|json|html|txt|md|svg|woff|woff2|ttf|otf)$">
    Order allow,deny
    Allow from all
</FilesMatch>
